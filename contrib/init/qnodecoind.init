#!/bin/bash
#
#  qnodecoind The QnodeCoin Core server.
#
#
# chkconfig: 345 80 20
# description: qnodecoind
# processname: qnodecoind
#

# Source function library.
. /etc/init.d/functions

# you can override defaults in /etc/sysconfig/qnodecoind, see below
if [ -f /etc/sysconfig/qnodecoind ]; then
        . /etc/sysconfig/qnodecoind
fi

RETVAL=0

prog=qnodecoind
# you can override the lockfile via BITCOIND_LOCKFILE in /etc/sysconfig/qnodecoind
lockfile=${BITCOIND_LOCKFILE-/var/lock/subsys/qnodecoind}

# qnodecoind defaults to /usr/bin/qnodecoind, override with BITCOIND_BIN
qnodecoind=${BITCOIND_BIN-/usr/bin/qnodecoind}

# qnodecoind opts default to -disablewallet, override with BITCOIND_OPTS
qnodecoind_opts=${BITCOIND_OPTS--disablewallet}

start() {
    echo -n $"Starting $prog: "
    daemon $DAEMONOPTS $qnodecoind $qnodecoind_opts
    RETVAL=$?
    echo
    [ $RETVAL -eq 0 ] && touch $lockfile
    return $RETVAL
}

stop() {
    echo -n $"Stopping $prog: "
    killproc $prog
    RETVAL=$?
    echo
    [ $RETVAL -eq 0 ] && rm -f $lockfile
    return $RETVAL
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    status)
        status $prog
        ;;
    restart)
        stop
        start
        ;;
    *)
        echo "Usage: service $prog {start|stop|status|restart}"
        exit 1
        ;;
esac
